<template>
    <div>
        <topComponent title='咨询列表' :showLeft='true'></topComponent>
        <div class="content">
          <div class="newslist">
            <newsItem :data="dataList"></newsItem>
          </div>
        </div>
    </div>
</template>

<script>
  import api from '../../fetch/api'
export default {
    components: {
      api
    },
    data () {
      return {
        dataList: []
      }
    },
    methods: {
      getdatalist () {
        api.getNewList(this.$route.params.type).then((res) => {
          this.dataList = res.dataList
        })
      }
    },
    mounted () {
      this.getdatalist()
    }
}
</script>

