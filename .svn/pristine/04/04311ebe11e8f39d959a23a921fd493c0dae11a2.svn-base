<template>
    <div>
        <topComponent :title="title" :showLeft='true'></topComponent>
        <div class="content">
          <div class="newslist">
            <scroller noDataText="" style="height:80%;" :on-infinite="infinite">
              <div style="height:44px;"></div>
              <newsItem :data="dataList" style="padding:0 0.5rem"></newsItem>
            </scroller>
          </div>
        </div>
    </div>
</template>

<script>
import api from '../../fetch/api'
export default {
    components: {
      api
    },
    data () {
      return {
        dataList: [],
        title:'资讯阅读',
        postdata: {
          page: 0, //开始（分页信息）
          size: 7, //数据条数（分页信息）
        },
        newdata :['']
      }
    },
    //
    watch: {
      postdata: {
        handler: function(val, oldVal) {
          this.getNewMore()
        },
        deep: true
      }
    },
    methods: {
      infinite(done) {
        if (this.newdata.length === 0) {
          setTimeout(() => {
            done(true)
          }, 1500)
          return;
        }
        setTimeout(() => {
          this.page++;
          this.postdata.page= this.page ;
          this.getNewMore()
          this.size = this.size + this.postdata.page*7;
          done()
        }, 1500)
      },
      getNewMore(){
        api.getNewMore(this.postdata).then((res) => {
          this.newdata = res.dataList;
          res.dataList.map(item => {
            this.dataList.push(item)
          })
        }).catch((res) =>{
          this.newdata =[]
        })
      }
    },
    mounted () {
      this.page = 0
      this.size = 7
      document.body.scrollTop = 0
      this.getNewMore()
    }
}
</script>

