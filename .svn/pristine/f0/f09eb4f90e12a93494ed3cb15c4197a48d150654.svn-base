<template>
    <div>
        <topComponent :title="title" :showLeft='true'></topComponent>
        <div class="content">
          <div class="newslist">
            <newsItem :data="dataList"></newsItem>
          </div>
        </div>
    </div>
</template>

<script>
  import api from '../../fetch/api'
export default {
    components: {
      api
    },
    data () {
      return {
        dataList: [],
        title:''
      }
    },
    methods: {
      getdatalist () {
        let propsData={
          "page":0,
          "size":7,
          "newsType":this.$route.query.newsType
        }
        api.getNewList(propsData).then((res) => {
          this.dataList = res.dataList
        })
      },
    },
    mounted () {
      this.getdatalist()
      // this.getHomeNewsMore()
      console.log(typeof this.$route.query.newsType)
      switch(this.$route.query.newsType){
        case 0:
        this.title ='政策服务';
        break;
        case 1:
        this.title ='法律法规';
        break;
        case 2:
        this.title ='新闻资讯';
        break;
        case 3:
        this.title ='行业资讯';
        break;
        case 4:
        this.title ='最新资讯';
        break;
      }
    }
}
</script>

